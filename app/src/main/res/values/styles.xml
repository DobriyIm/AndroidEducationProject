<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalcButton" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="backgroundTint">@null</item>
    </style>
    
    <style name="Group1Buttons" parent="CalcButton">
        <item name="android:textColor">@color/calc_group1_text</item>
        <item name="android:background">@drawable/calc_btn_group1_shape</item>
    </style>

    <style name="Group2Buttons" parent="CalcButton">
        <item name="android:textColor">@color/calc_group2_text</item>
        <item name="android:background">@drawable/calc_btn_group2_shape</item>
    </style>

    <style name="EqualButton" parent="CalcButton">
        <item name="android:textColor">@color/calc_equals_text</item>
        <item name="android:background">@drawable/calc_btn_equals_shape</item>
    </style>

</resources>